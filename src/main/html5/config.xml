	<gap:platforms>
		<gap:platform name="ios" />
	</gap:platforms>

<icon src="icons/icon-iphone-57.png" width="57" height="57"/>
<icon src="icons/icon-iphone-72.png" width="72" height="72"/>
<icon src="icons/icon-iphone-114.png" width="114" height="114"/>
<icon src="icons/icon-iphone-144.png" width="144" height="144"/>

<gap:splash src="splashes/Default-Landscape~ipad.png" width="1024" height="768"/>
<gap:splash src="splashes/Default-Portrait~ipad.png" width="768" height="1024"/>
<gap:splash src="splashes/Default.png"/>
<gap:splash src="splashes/splash.png"/>

<preference name="disable-cursor" value="true" />
<preference name="fullscreen" value="true" />
<preference name="orientation" value="portrait" />
<preference name="phonegap-version" value="1.7.0" />

